{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES5",
    "module": "commonjs",
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "preserveSymlinks": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "node_modules/kaltura-player-js/ts-typed"
  ]
}
