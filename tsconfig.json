{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "commonjs",
    "moduleResolution": "Node",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "types": ["node"]
  },
  "lib": ["dom"],
  "include": ["src/**/*.tsx", "src/**/*.ts", "node_modules/@playkit-js/kaltura-player-js/ts-typed"]
}
