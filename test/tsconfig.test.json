{
    "compilerOptions": {
      "allowJs": false,
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "jsx": "react-jsx",
      "jsxImportSource": "preact",
      "module": "commonjs",
      "moduleResolution": "Node",
      "preserveSymlinks": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES5",
      "types": ["node"]
    },
    "lib": ["dom"],
    "files": ["./types.d.ts"],
    "include": ["../src/**/*.tsx", "../src/**/*.ts"],
    "exclude": ["../node_modules"]
  }
  